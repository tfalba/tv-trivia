{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "resolveJsonModule": true,
    "isolatedModules": true,

    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@tv-trivia/shared": ["packages/shared/src"],
      "@tv-trivia/ui": ["packages/ui/src"]
    }
  }
}